<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:orientation="vertical"
    tools:context=".ui.ae_phone.addcontact.AddContactActivity">

    <include layout="@layout/toolbar_personal" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivAvatar"
        android:layout_width="@dimen/icon_size_giant"
        android:layout_height="@dimen/icon_size_giant"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/iv_add_avatar" />

    <EditText
        android:id="@+id/edtName"
        style="@style/EditTextSingleLine"
        android:layout_marginTop="@dimen/spacing_large"
        android:drawableStart="@drawable/ic_user"
        android:hint="@string/hint_contact_name"
        android:drawablePadding="@dimen/spacing_tiny"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_large"
        android:gravity="center_vertical"
        android:singleLine="true" />

    <EditText
        android:id="@+id/edtPhone"
        style="@style/EditTextSingleLine"
        android:layout_marginTop="@dimen/spacing_small"
        android:drawableStart="@drawable/ic_mobile"
        android:hint="@string/label_phone"
        android:inputType="phone"
        android:drawablePadding="@dimen/spacing_tiny"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_large"
        android:gravity="center_vertical"
        android:singleLine="true" />

    <EditText
        android:id="@+id/edtEmail"
        style="@style/EditTextSingleLine"
        android:drawableStart="@drawable/ic_email"
        android:layout_marginTop="@dimen/spacing_small"
        android:hint="@string/hint_email"
        android:inputType="textEmailAddress"
        android:drawablePadding="@dimen/spacing_tiny"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_large"
        android:gravity="center_vertical"
        android:singleLine="true" />

</LinearLayout>