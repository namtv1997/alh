<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="@dimen/spacing_normal"
    android:background="@drawable/bg_option_menu">

    <ImageView
        android:id="@+id/ivCancel"
        android:layout_width="@dimen/icon_size_normal"
        android:layout_height="@dimen/icon_size_normal"
        android:layout_marginTop="@dimen/spacing_large"
        android:src="@drawable/ic_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvContent"
        style="@style/TextContentLarge"
        android:layout_width="0dp"
        android:gravity="center"
        android:paddingTop="@dimen/spacing_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivCancel"/>

    <Button
        android:id="@+id/btnYes"
        style="@style/ButtonLogin"
        android:layout_width="wrap_content"
        android:background="@drawable/bg_btn_yes"
        android:text="@string/yes"
        android:textAllCaps="false"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:layout_marginStart="@dimen/spacing_giant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnNo"
        style="@style/ButtonRegister"
        android:layout_width="wrap_content"
        android:text="@string/no"
        android:background="@drawable/bg_btn_no"
        android:textAllCaps="false"
        android:layout_marginStart="@dimen/spacing_giant"
        app:layout_constraintStart_toEndOf="@id/btnYes"
        app:layout_constraintTop_toTopOf="@id/btnYes"
        app:layout_constraintBottom_toBottomOf="@id/btnYes"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>