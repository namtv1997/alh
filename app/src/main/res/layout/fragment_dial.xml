<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ae_phone.DialFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llHotline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_8"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_va_phone"
                android:drawablePadding="10dp"
                android:text="Hotline đang sử dụng:  "
                android:textColor="@color/colorMain" />

            <TextView
                android:id="@+id/tvNumberHotLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_va_polygon"
                android:drawablePadding="10dp"
                android:textColor="@color/colorMain"
                android:textStyle="bold" />
        </LinearLayout>

        <com.example.alohaandroid.utils.linphone.AddressText
            android:id="@+id/etNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="15dp"
            android:background="@drawable/bg_3"
            android:ellipsize="end"
            android:enabled="false"
            android:gravity="center"
            android:inputType="number"
            android:paddingVertical="5dp"
            android:singleLine="true"
            android:textColor="@color/colorMain"
            android:textSize="32sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tvContactUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tạo liên hệ"
                android:textColor="@color/colorMain" />

            <TextView
                android:id="@+id/tvAddToContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Thêm vào liên hệ có sẵn"
                android:textColor="@color/colorMain" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnNumber1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_9"
                    android:paddingBottom="10dp"
                    android:text="1"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btnNumber2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_9"
                    android:paddingBottom="10dp"
                    android:text="2"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btnNumber3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_9"
                    android:paddingBottom="10dp"
                    android:text="3"
                    android:textSize="28sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="15dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnNumber4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_9"
                    android:paddingBottom="10dp"
                    android:text="4"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btnNumber5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_9"
                    android:paddingBottom="10dp"
                    android:text="5"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btnNumber6"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_9"
                    android:paddingBottom="10dp"
                    android:text="6"
                    android:textSize="28sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnNumber7"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_9"
                    android:paddingBottom="10dp"
                    android:text="7"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btnNumber8"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_9"
                    android:paddingBottom="10dp"
                    android:text="8"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btnNumber9"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_9"
                    android:paddingBottom="10dp"
                    android:text="9"
                    android:textSize="28sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="15dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnNumberStar"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_9"
                    android:paddingBottom="10dp"
                    android:text="*"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btnNumber0"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_9"
                    android:paddingBottom="10dp"
                    android:text="0"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btnNumberSharp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_9"
                    android:paddingBottom="10dp"
                    android:text="#"
                    android:textSize="28sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.example.alohaandroid.utils.linphone.CallButton
                    android:id="@+id/btnCall"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_icon_call_big"
                    android:textSize="28sp" />

                <ImageView
                    android:id="@+id/ivDelete"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="15dp"
                    android:src="@drawable/ic_va_delete_number" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/vElevation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlackTextOpacity50"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:background="@drawable/bg_7"
        android:id="@+id/rvChooseNumberHotline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>